$ManagementGroupName = "MG001" 

$ResourceGroup = "RG001" 

$Location = "Southeast Asia" 

 

Get-AzManagementGroup 

 

#----- Create a Management Group 

 

New-AzManagementGroup -GroupName $ManagementGroupName -DisplayName $ManagementGroupName  

 

 

 

Get-AzResourceGroup  

New-AzResourceGroup -Name $ResourceGroup -Location $Location 

 

 

